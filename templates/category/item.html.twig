{% extends 'base.html.twig' %}

{% block title %}categories{% endblock %}

{% block body %}
<h1 class="text-5xl text-center p-5"> List Article</h1>



        <div class="container mx-auto p-4">  
           <h1 class = "text-4xl p-5"> Category: {{ category.name}}</h1>
           <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
   
        {% for article in category.article %}
            
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <div class="p-5">
                <h3 class="text-3xl p-5">{{ article.title }}</h3>
                <p>{{ article.content }}</p>
               </div>
            </div>
        {% else %}
            <li>No articles found for this category.</li>
        {% endfor %}

    </div>
    </div>
        



{% endblock %}
